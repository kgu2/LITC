<apex:page standardController="LITC_Reporting_Form__c" extensions="LitcReportingFormPDFController" renderAs="pdf" name="Form13424L.pdf" showHeader="false" sidebar="false" applyHtmlTag="false" docType="html-5.0">
    <head>
        <style type="text/css">
            body{
                font-size:10pt;
            }
            p{
                font-size:10pt;
            }

            h1{ 
                font-family: sans-serif;
                font-weight: bold;
                font-size: 22pt;
                color: rgb(80, 133, 165);
            }

            h2{ 
                font-family: sans-serif;
                font-weight: bold;
                font-size: 14pt;
                color: rgb(80, 133, 165);
            }

            .hr{ 
                width:100%; height:2px; background:#DADADA;
            }

            .header{ 
                font-size: 10pt;
                color: #AFAFAF;
                font-family: sans-serif;
            }
            .space{ 
                margin-top: 20px; margin-bottom: 5px
            }
        </style>
    </head>
    <body>
        <table>
            <tr>
                <td>
                    <apex:image url="{!$Resource.LITCPDFTitleIcon}" width="200px" height="60px"/>
                </td>
            </tr>
        </table>

        <h1><u>Form 13424-L</u></h1>

        <h2>Expense totals</h2>
        <div class='hr'></div>

        <table style="width: 100%; border-collapse: collapse; border: 1px solid black; table-layout: fixed;">
            <thead>
                <tr>
                    <th style="border: 1px solid black;background-color: #2d247c; color: white">Expense category</th>
                    <th style="border: 1px solid black;background-color: #2d247c; color: white">Federal</th>
                    <th style="border: 1px solid black;background-color: #2d247c; color: white">Match</th>
                    <th style="border: 1px solid black;background-color: #2d247c; color: white">Total</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td style="border: 1px solid black;">A. Personnel</td>
                    <td style="border: 1px solid black;">${!LITC_Reporting_Form__c.Personnel_Dollar_Federal_Total__c}</td>
                    <td style="border: 1px solid black;">${!LITC_Reporting_Form__c.Personnel_Dollar_Match_Total__c}</td>
                    <td style="border: 1px solid black;">${!LITC_Reporting_Form__c.Personnel_Total_Formula__c}</td>
                </tr>
                <tr>
                    <td style="border: 1px solid black;">B. Fringe benefits</td>
                    <td style="border: 1px solid black;">${!LITC_Reporting_Form__c.Fringe_Dollar_Federal_Total__c}</td>
                    <td style="border: 1px solid black;">${!LITC_Reporting_Form__c.Fringe_Dollar_Match_Total__c}</td>
                    <td style="border: 1px solid black;">${!LITC_Reporting_Form__c.Fringe_benefits_Total_Formula__c}</td>
                </tr>
                <tr>
                    <td style="border: 1px solid black;">C. Travel</td>
                    <td style="border: 1px solid black;">${!LITC_Reporting_Form__c.Travel_Federal_Total__c}</td>
                    <td style="border: 1px solid black;">${!LITC_Reporting_Form__c.Travel_Match_Total__c}</td>
                    <td style="border: 1px solid black;">${!LITC_Reporting_Form__c.Travel_Total_Formula__c}</td>
                </tr>
                <tr>
                    <td style="border: 1px solid black;">D. Equipment</td>
                    <td style="border: 1px solid black;">${!LITC_Reporting_Form__c.Equipment_Federal_Total__c}</td>
                    <td style="border: 1px solid black;">${!LITC_Reporting_Form__c.Equipment_Match_Total__c}</td>
                    <td style="border: 1px solid black;">${!LITC_Reporting_Form__c.Equipment_Total_Formula__c}</td>
                </tr>
                <tr>
                    <td style="border: 1px solid black;">E. Supplies</td>
                    <td style="border: 1px solid black;">${!LITC_Reporting_Form__c.Supplies_Federal_Total__c}</td>
                    <td style="border: 1px solid black;">${!LITC_Reporting_Form__c.Supplies_Match_Total__c}</td>
                    <td style="border: 1px solid black;">${!LITC_Reporting_Form__c.Supplies_Total_Formula__c}</td>
                </tr>
                <tr>
                    <td style="border: 1px solid black;">F. Contractual</td>
                    <td style="border: 1px solid black;">${!LITC_Reporting_Form__c.Contractual_Federal_Total__c}</td>
                    <td style="border: 1px solid black;">${!LITC_Reporting_Form__c.Contractual_Match_Total__c}</td>
                    <td style="border: 1px solid black;">${!LITC_Reporting_Form__c.Contractual_Total_formula__c}</td>
                </tr>
                <tr>
                    <td style="border: 1px solid black;">G. Construction</td>
                    <td style="border: 1px solid black; background-color: #e0e0e0;"></td>
                    <td style="border: 1px solid black; background-color: #e0e0e0;"></td>
                    <td style="border: 1px solid black; background-color: #e0e0e0;"></td>
                </tr>      
                <tr>
                    <td style="border: 1px solid black;">H. Other expenses</td>
                    <td style="border: 1px solid black;">${!LITC_Reporting_Form__c.Other_expenses_Federal_Total__c}</td>
                    <td style="border: 1px solid black;">${!LITC_Reporting_Form__c.Other_Expenses_Match_Total__c}</td>
                    <td style="border: 1px solid black;">${!LITC_Reporting_Form__c.Other_Expenses_Total_Formula__c}</td>
                </tr>         
                <tr>
                    <td style="border: 1px solid black;">I. Total direct charges</td>
                    <td style="border: 1px solid black;">${!LITC_Reporting_Form__c.Total_Direct_Charges_Federal_Formula__c}</td>
                    <td style="border: 1px solid black;">${!LITC_Reporting_Form__c.Total_Direct_Charges_Match_Formula__c}</td>
                    <td style="border: 1px solid black;">${!LITC_Reporting_Form__c.Total_Direct_Charges_Total_Formula__c}</td>
                </tr>         
                <tr>
                    <td style="border: 1px solid black;">J. Indirect charges</td>
                    <td style="border: 1px solid black;">${!LITC_Reporting_Form__c.Indirect_Expenses_Federal_Total__c}</td>
                    <td style="border: 1px solid black; background-color: #e0e0e0;"></td>
                    <td style="border: 1px solid black;">${!LITC_Reporting_Form__c.Indirect_Expenses_Federal_Total__c}</td>
                </tr>              
                <tr>
                    <td style="border: 1px solid black;">K. Totals</td>
                    <td style="border: 1px solid black;">${!LITC_Reporting_Form__c.Total_Federal_Expenses__c}</td>
                    <td style="border: 1px solid black;">${!LITC_Reporting_Form__c.Total_Match_Expenses__c}</td>
                    <td style="border: 1px solid black;">${!LITC_Reporting_Form__c.Total_Expenses__c}</td>
                </tr>                                                                              
            </tbody>
        </table>
        
        <h2>Donated goods and services</h2>
        <table style="width: 100%; border-collapse: collapse; border: 1px solid black; table-layout: fixed;">
            <thead>
                <tr>
                    <th style="border: 1px solid black;background-color: #2d247c; color: white">Description</th>
                    <th style="border: 1px solid black;background-color: #2d247c; color: white">Quantity</th>
                    <th style="border: 1px solid black;background-color: #2d247c; color: white">U/M</th>
                    <th style="border: 1px solid black;background-color: #2d247c; color: white">Cost per unit</th>
                    <th style="border: 1px solid black;background-color: #2d247c; color: white">Total</th>
                </tr>
            </thead>
            <tbody>
                <apex:repeat value="{!formattedLineItemsGDS}" var="item">
                    <tr>
                        <td style="border: 1px solid black;">{!item['Description__c']}</td>
                        <td style="border: 1px solid black;">{!item['Quantity__c']}</td>
                        <td style="border: 1px solid black;">{!item['U_M__c']}</td>
                        <td style="border: 1px solid black;">{!item['Cost_per_Unit__c']}</td>
                        <td style="border: 1px solid black;">{!item['FormattedTotal']}</td>
                    </tr>
                </apex:repeat>
            </tbody>
        </table>

        <br/>

        <h2>Matching funds</h2>
        <table style="width: 100%; border-collapse: collapse; border: 1px solid black; table-layout: fixed;">
            <thead>
                <tr>
                    <th style="border: 1px solid black;background-color: #2d247c; color: white">Type</th>
                    <th style="border: 1px solid black;background-color: #2d247c; color: white">Amount</th>
                </tr>
            </thead>
            <tbody>
                <apex:repeat value="{!formattedLineItemsMF}" var="item">
                    <tr>
                        <td style="border: 1px solid black;">{!item['Matching_Funds_Type__c']}</td>
                        <td style="border: 1px solid black;">{!item['Matching_Funds_Amont__c']}</td>
                    </tr>
                </apex:repeat>
            </tbody>
        </table>

        <br/>

        <h2>Personnel</h2>
        <table style="width: 100%; border-collapse: collapse; border: 1px solid black; table-layout: fixed;">
            <thead>
                <tr>
                    <th style="border: 1px solid black;background-color: #2d247c; color: white">Name</th>
                    <th style="border: 1px solid black;background-color: #2d247c; color: white">Position</th>
                    <th style="border: 1px solid black;background-color: #2d247c; color: white">LITC FTE</th>
                    <th style="border: 1px solid black;background-color: #2d247c; color: white">Total allocated salary</th>
                    <th style="border: 1px solid black;background-color: #2d247c; color: white">Dollar federal</th>
                    <th style="border: 1px solid black;background-color: #2d247c; color: white">Dollar match</th>
    
                </tr>
            </thead>
            <tbody>
                <apex:repeat value="{!formattedLineItemsP}" var="item">
                    <tr>
                        <td style="border: 1px solid black;">{!item['Personnel_Name__c']}</td>
                        <td style="border: 1px solid black;">{!item['Position__c']}</td>
                        <td style="border: 1px solid black;">{!item['LITC_FTE__c']}</td>
                        <td style="border: 1px solid black;">{!item['Total_Allocated_Salary__c']}</td>
                        <td style="border: 1px solid black;">{!item['Dollar_Federal__c']}</td>
                        <td style="border: 1px solid black;">{!item['Dollar_Match__c']}</td>
                    </tr>
                </apex:repeat>
            </tbody>
        </table>    
        
        <br/>

        <h2>Fringe</h2>
        <table style="width: 100%; border-collapse: collapse; border: 1px solid black; table-layout: fixed;">
            <thead>
                <tr>
                    <th style="border: 1px solid black;background-color: #2d247c; color: white">Total cost</th>
                    <th style="border: 1px solid black;background-color: #2d247c; color: white">Total allocated Cost</th>
                    <th style="border: 1px solid black;background-color: #2d247c; color: white">Dollar federal</th>
                    <th style="border: 1px solid black;background-color: #2d247c; color: white">Dollar match</th>
                </tr>
            </thead>
            <tbody>
                <apex:repeat value="{!formattedLineItemsF}" var="item">
                    <tr>
                        <td style="border: 1px solid black;">{!item['Total_Cost__c']}</td>
                        <td style="border: 1px solid black;">{!item['Total_Allocated_Cost__c']}</td>
                        <td style="border: 1px solid black;">{!item['Dollar_Federal__c']}</td>
                        <td style="border: 1px solid black;">{!item['Dollar_Match__c']}</td>
                    </tr>
                </apex:repeat>
            </tbody>
        </table>

        <br/>

        <h2>Supplies, contractual, travel, equipment, and other expenses</h2>
        <table style="width: 100%; border-collapse: collapse; border: 1px solid black; table-layout: fixed;">
            <thead>
                <tr>
                    <th style="border: 1px solid black;background-color: #2d247c; color: white">Category</th>
                    <th style="border: 1px solid black;background-color: #2d247c; color: white">Total allocated cost</th>
                    <th style="border: 1px solid black;background-color: #2d247c; color: white">Description</th>           
                    <th style="border: 1px solid black;background-color: #2d247c; color: white">Dollar federal</th>
                    <th style="border: 1px solid black;background-color: #2d247c; color: white">Dollar match</th>     
                </tr>
            </thead>
            <tbody>
                <apex:repeat value="{!formattedLineItemsSCTOE}" var="item">
                    <tr>
                        <td style="border: 1px solid black;">{!item['Category__c']}</td>
                        <td style="border: 1px solid black;">{!item['Total_Allocated_Cost__c']}</td>
                        <td style="border: 1px solid black;">{!item['Description__c']}</td>
                        <td style="border: 1px solid black;">{!item['Dollar_Federal__c']}</td>
                        <td style="border: 1px solid black;">{!item['Dollar_Match__c']}</td>
                    </tr>
                </apex:repeat>
            </tbody>
        </table>

        <br/>
        <h2>Indirect expenses</h2>

        <table style="width: 100%; border-collapse: collapse; border: 1px solid black; table-layout: fixed;">
            <thead>
                <tr>
                    <th style="border: 1px solid black;background-color: #2d247c; color: white">Indirect cost rate type</th>
                    <th style="border: 1px solid black;background-color: #2d247c; color: white">Agency who issued ICRA</th>
                    <th style="border: 1px solid black;background-color: #2d247c; color: white">Indirect cost (federal)</th>
                </tr>
            </thead>
            <tbody>
                <apex:repeat value="{!formattedLineItemsIE}" var="item">
                    <tr>
                        <td style="border: 1px solid black;">{!item['Indirect_Cost_Rate_Type__c']}</td>
                        <td style="border: 1px solid black;">{!item['Agency_who_issued_ICRA__c']}</td>
                        <td style="border: 1px solid black;">{!item['Indirect_Cost_Federal__c']}</td>
                    </tr>
                </apex:repeat>
            </tbody>
        </table>



        <div style="page-break-before:always;"></div>

        <h2>
            Form 13424-L
        </h2>

        <div class='hr'></div>

        <apex:outputPanel rendered="{!LITC_Reporting_Form__c.Return_Grant_Funds__c != null}" layout="none">
            <div class="space">Do you wish to return grant funds?</div>
            <b>{!LITC_Reporting_Form__c.Return_Grant_Funds__c}</b>
        </apex:outputPanel>

        <apex:outputPanel rendered="{!LITC_Reporting_Form__c.Amount_Being_Returned__c != null}" layout="none">
            <div class="space">Amount being returned</div>
            <b>{!LITC_Reporting_Form__c.Amount_Being_Returned__c}</b>
        </apex:outputPanel>

        <apex:outputPanel rendered="{!LITC_Reporting_Form__c.Funds_Returned_Explanation__c != null}" layout="none">
            <div class="space">Please provide a brief explanation for why funds are being returned.</div>
            <b>{!LITC_Reporting_Form__c.Funds_Returned_Explanation__c}</b>
        </apex:outputPanel>

        <apex:outputPanel rendered="{!LITC_Reporting_Form__c.Request_additional_funds__c != null}" layout="none">
            <div class="space">Do you wish to request additional funds?</div>
            <b>{!LITC_Reporting_Form__c.Request_additional_funds__c}</b>
        </apex:outputPanel>

        <apex:outputPanel rendered="{!LITC_Reporting_Form__c.Total_Amount_Requested__c != null}" layout="none">
            <div class="space">Total amount of federal funds requested</div>
            <b>{!LITC_Reporting_Form__c.Total_Amount_Requested__c}</b>
        </apex:outputPanel>

        <apex:outputPanel rendered="{!LITC_Reporting_Form__c.Amount_Requested_Explanation__c != null}" layout="none">
            <div class="space">
                Provide the amount requested broken down by expense category (Personnel, Fringe, Travel, Equipment, Supplies, Contractual or Indirect Cost). 
                Provide the amount and source of match equal to the amount requested. 
                Provide an explanation of the need for the additional funding.
            </div>
            <b>{!LITC_Reporting_Form__c.Amount_Requested_Explanation__c}</b>
        </apex:outputPanel>

        <h2>Submission</h2>
        <div class='hr'></div>
        <div class="space">Submission date</div>
        <b>
        <apex:outputText value="{0, date, MMMM d',' yyyy}">
            <apex:param value="{!LITC_Reporting_Form__c.Submission_Date__c}" />
        </apex:outputText>
        </b>
        <div class="space">Submitted By</div>
        <b>{!LITC_Reporting_Form__c.Submitted_Name__c}</b>

    </body>
</apex:page>